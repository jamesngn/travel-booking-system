<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="travel-booking-system">
        <class>jamesngnm.travelbookingsystem.entity.Flight</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
<!--            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://app-db/travelBookingDB"/>-->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/TravelBookingDB"/>
            <property name="jakarta.persistence.jdbc.user" value="mysql"/>
<!--            <property name="jakarta.persistence.jdbc.password" value=""/>-->
            <property name="jakarta.persistence.jdbc.password" value="mysql"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show-sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>